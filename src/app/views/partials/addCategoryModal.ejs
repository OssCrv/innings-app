<div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="categories/create" method="POST">
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Nombre de categoria</label>
                        <input type="text" class="form-control" id="recipient-name" name="category_name"
                            placeholder="Ej: Fila preferencial" required>
                    </div>
                    <div class="mb-3">
                            <label for="inputDependency">Dependencia</label>
                            <select id="inputDependency" class="form-control", name="dependency_name">
                                <option selected>Choose...</option>
                                <% for(let dependency of dependencies) { %>                        
                                    <option><%= dependency %></option>
                                <% } %>
                            </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="Enviar">
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>